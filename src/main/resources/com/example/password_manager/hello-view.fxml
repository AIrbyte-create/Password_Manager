      fx:controller="com.example.password_manager.Controller">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Label text="Type:"/>
        <ComboBox fx:id="types" prefWidth="150"/>
        <Label text="Name:"/>
        <TextField fx:id="nameField" prefWidth="180"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Key / PIN:"/>
        <TextField fx:id="keyField" prefWidth="250"/>
        <CheckBox fx:id="caseSensitiveBox" text="Case Sensitive"/>
        <Button fx:id="createBtn" text="Erstellen"/>
    </HBox>

